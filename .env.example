# MLOps DistillBERT Environment Configuration
# Copy this file to .env and update the values

# ===== API Configuration =====
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false
LOG_LEVEL=INFO

# ===== Model Configuration =====
MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MODEL_CACHE_DIR=./models
MODEL_VERSION=v1.0.0

# ===== Monitoring =====
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ===== Database (Optional) =====
# DATABASE_URL=postgresql://user:password@localhost:5432/mlops
# DATABASE_URL=sqlite:///./mlops.db

# ===== Redis (Optional) =====
# REDIS_URL=redis://localhost:6379/0

# ===== MLflow =====
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=distillbert-sentiment

# ===== Weights & Biases (Optional) =====
# WANDB_PROJECT=mlops-distillbert
# WANDB_API_KEY=your_wandb_api_key

# ===== Security =====
# API_KEY=your_secret_api_key
# SECRET_KEY=your_jwt_secret_key

# ===== External Services =====
# HUGGINGFACE_HUB_TOKEN=your_hf_token
# OPENAI_API_KEY=your_openai_key

# ===== Cloud Configuration =====
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-west-2

# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# AZURE_STORAGE_CONNECTION_STRING=your_azure_connection

# ===== Development =====
DEBUG=false
TESTING=false
ENVIRONMENT=development

# ===== Performance =====
MAX_WORKERS=4
BATCH_SIZE=32
MAX_BATCH_SIZE=100
REQUEST_TIMEOUT=30

# ===== Feature Flags =====
ENABLE_AB_TESTING=false
ENABLE_FEATURE_STORE=true
ENABLE_MODEL_CACHING=true
ENABLE_RATE_LIMITING=false